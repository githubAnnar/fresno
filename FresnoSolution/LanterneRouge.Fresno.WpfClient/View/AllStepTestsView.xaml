<UserControl x:Class="LanterneRouge.Fresno.WpfClient.View.AllStepTestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sf="clr-namespace:LanterneRouge.Fresno.WpfClient.Utils.AttatchedProperties"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase">
    <UserControl.Resources>
        <CollectionViewSource x:Key="StepTests" Source="{Binding Path=AllStepTests}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="TestDate" Direction="Descending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <ContextMenu x:Key="ItemContextMenu">
            <MenuItem Header="Edit" Command="{Binding EditSelectedCommand}"/>
            <Separator/>
            <MenuItem Header="Show User" Command="{Binding ShowUserCommand}" />
            <MenuItem Header="Show All Measurements" Command="{Binding ShowAllMeasurementsCommand}" />
            <MenuItem Header="Show Calculation" Command="{Binding ShowCalculationCommand}"/>
            <Separator/>
            <MenuItem Header="Add Measurement" Command="{Binding AddMeasurementCommand}" />
        </ContextMenu>

        <Style x:Key="StepTestStyle" TargetType="{x:Type ListViewItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="IsSelected" Value="{Binding Path=IsSelected, Mode=TwoWay}" />
            <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}"/>
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="ItemsControl.AlternationIndex" Value="1" />
                        <Condition Property="IsSelected" Value="False" />
                        <Condition Property="IsMouseOver" Value="False" />
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#EEEEEEEE" />
                </MultiTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    <DockPanel>
        <ListView AlternationCount="2" DataContext="{StaticResource StepTests}" ItemsSource="{Binding}" ItemContainerStyle="{StaticResource StepTestStyle}" sf:GridViewSort.AutoSort="True">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Test Date" DisplayMemberBinding="{Binding TestDate}" sf:GridViewSort.PropertyName="TestDate"/>
                    <GridViewColumn Header="Test Type" DisplayMemberBinding="{Binding TestType}" sf:GridViewSort.PropertyName="TestType"/>
                    <GridViewColumn Header="Step Duration" DisplayMemberBinding="{Binding StepDuration}" sf:GridViewSort.PropertyName="StepDuration"/>
                    <GridViewColumn Header="Load Preset" DisplayMemberBinding="{Binding LoadPreset}" sf:GridViewSort.PropertyName="LoadPreset"/>
                    <GridViewColumn Header="Increase" DisplayMemberBinding="{Binding Increase}" sf:GridViewSort.PropertyName="Increase"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
